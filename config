# Full screen screenshot saved in ~/Pictures/ScreenShots with timestamp filename
bindsym Print exec --no-startup-id maim --format=png "/home/$USER/Pictures/ScreenShots/-$(date +'%Y-%m-%d_%H-%M-%S').png"

# Active window screenshot saved in ~/Pictures/ScreenShots
bindsym $mod+Print exec --no-startup-id maim --format=png --window $(xdotool getactivewindow) "/home/$USER/Pictures/ScreenShots/-$(date +'%Y-%m-%d_%H-%M-%S')-window.png"

# Selected region screenshot saved in ~/Pictures/ScreenShots
bindsym Shift+Print exec --no-startup-id maim --format=png --select "/home/$USER/Pictures/ScreenShots/-$(date +'%Y-%m-%d_%H-%M-%S')-select.png"

# Copy full screen screenshot to clipboard (no file saved)
bindsym Ctrl+Print exec --no-startup-id maim --format=png | xclip -selection clipboard -t image/png

# Copy active window screenshot to clipboard (no file saved)
bindsym Ctrl+$mod+Print exec --no-startup-id maim --format=png --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png

# Copy selected region screenshot to clipboard (no file saved)
bindsym Ctrl+Shift+Print exec --no-startup-id maim --format=png --select | xclip -selection clipboard -t image/png


# | Keybinding        | Action |
# |-------------------|---------|
# | Print             | Save full screen screenshot with timestamp filename |
# | $mod+Print        | Save active window screenshot |
# | Shift+Print       | Save selected region screenshot |
# | Ctrl+Print        | Copy full screen to clipboard |
# | Ctrl+$mod+Print   | Copy active window to clipboard |
# | Ctrl+Shift+Print  | Copy selected region to clipboard |

# change focus
